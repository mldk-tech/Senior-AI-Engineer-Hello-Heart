# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.5
OPENAI_MAX_TOKENS=300
OPENAI_TOP_P=0.9

# Anthropic Configuration (if using Claude)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Application Configuration
APP_NAME=Hello Heart AI Assistant
APP_VERSION=1.0.0
DEBUG=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Health Data Configuration
MOCK_DATA_PATH=data/mock_user_data.json

# Safety Configuration
ENABLE_SAFETY_CHECKS=true
EMERGENCY_ESCALATION_ENABLED=true

# Proactive Engagement Configuration
MAX_DAILY_NUDGES=3
NUDGE_COOLDOWN_HOURS=4

# RAG Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
VECTOR_DB_PATH=./vector_db 